#!/bin/bash

# Claude Voice Input - Easy voice commands for Claude Code
# Usage: claude-voice [options]
#   -c, --continuous : Continuous listening mode
#   -h, --help      : Show help

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PYTHON_SCRIPT="$SCRIPT_DIR/voice_claude_direct.py"

# Color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Show help
show_help() {
    echo -e "${BLUE}Claude Voice Input${NC}"
    echo "==================="
    echo ""
    echo "Usage:"
    echo "  claude-voice              # Single command mode"
    echo "  claude-voice -c           # Continuous listening mode"
    echo "  claude-voice | claude     # Pipe directly to Claude Code"
    echo ""
    echo "Options:"
    echo "  -c, --continuous    Continuous listening mode"
    echo "  -h, --help         Show this help message"
    echo ""
    echo "Examples:"
    echo "  1. Single command to Claude:"
    echo "     $ claude-voice | claude"
    echo ""
    echo "  2. Interactive mode:"
    echo "     $ claude-voice -c"
    echo ""
    echo "Voice Commands (in continuous mode):"
    echo "  - 'stop recording'  : Send the current message"
    echo "  - 'clear message'   : Clear current message"
    echo "  - 'exit voice mode' : Exit the program"
}

# Check dependencies
check_dependencies() {
    if ! command -v python3 &> /dev/null; then
        echo -e "${RED}Error: Python 3 is not installed${NC}"
        exit 1
    fi
    
    if ! python3 -c "import speech_recognition" 2>/dev/null; then
        echo -e "${YELLOW}Missing speech_recognition module${NC}"
        echo "Installing..."
        pip3 install --break-system-packages SpeechRecognition
    fi
}

# Main
case "$1" in
    -h|--help)
        show_help
        exit 0
        ;;
    -c|--continuous)
        check_dependencies
        echo -e "${GREEN}Starting Claude Voice in continuous mode...${NC}"
        python3 "$PYTHON_SCRIPT" --continuous
        ;;
    *)
        check_dependencies
        echo -e "${GREEN}Starting Claude Voice (single command)...${NC}"
        python3 "$PYTHON_SCRIPT"
        ;;
esac